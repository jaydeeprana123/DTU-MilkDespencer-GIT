<resources>
    <!-- Base application theme. -->
    <style name="Theme.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary branding color -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>

        <!-- Text/icon color on the primary color -->
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

        <!-- Secondary branding color -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <!-- Text/icon color on the secondary color -->
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>

        <!-- Background color -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <!-- Text/icon color on the background -->
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>

        <!-- Error color -->
        <item name="colorError">@color/md_theme_light_error</item>
        <!-- Text/icon color on error color -->
        <item name="colorOnError">@color/md_theme_light_onError</item>

        <!-- Other color attributes can be added here -->

        <!-- ActionBar/Toolbar color -->
        <item name="colorPrimaryDark">@color/seed</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/seed</item>

        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/seed</item>

        <!-- Typography -->
        <!--<item name="android:fontFamily">@font/your_custom_font</item>
        <item name="android:textSize">@dimen/text_size_medium</item>

        &lt;!&ndash; Customize the window background &ndash;&gt;
        <item name="android:windowBackground">@drawable/your_custom_background</item>-->
    </style>

    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="Widget.App.ButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/RedButtonThemeOverlay</item>
    </style>

    <style name="Widget.App.GreenButtonStyle"
        parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>
    </style>


    <style name="RedButtonThemeOverlay">
        <item name="colorPrimary">@color/red</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">@color/md_theme_dark_success</item>
    </style>


</resources>